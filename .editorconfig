# EditorConfig helps everyone keep the same whitespace rules
root = true

[*]
charset             = utf-8
end_of_line         = lf
insert_final_newline = true
indent_style        = space
indent_size         = 4
trim_trailing_whitespace = true

# Markdown can use 2-space indents so lists look nice
[*.md]
indent_size = 2
